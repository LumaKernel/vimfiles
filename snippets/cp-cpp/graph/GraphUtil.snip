  /// Tree Diametor {{{ ///
  
  int treeDiameter(UnWeightedGraph tree) {
    int far = 0, dep = -1;
    function<void(int, int, int)> dfs = [&](int i, int p, int d) {
      if(dep < d) far = i, dep = d;
      for(int j : tree[i]) if(j != p) dfs(j, i, d + 1);
    };
    dfs(0, -1, 0);
    dep = -1;
    dfs(far, -1, 0);
    return dep;
  }
  
